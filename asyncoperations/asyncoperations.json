{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "White Fox Async Operations API",
    "description" : "API for asynchronous operations management",
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "http://whitefoxasyncservice.azurewebsites.net/asyncoperations",
    "description" : "White Fox API"
  } ],
  "security" : [ {
    "bearerAuth" : [ ]
  } ],
  "paths" : {
    "/asyncoperations" : {
      "get" : {
        "summary" : "get the status of a request",
        "operationId" : "operationStatus",
        "parameters" : [ {
          "name" : "id",
          "in" : "query",
          "description" : "operationId",
          "required" : true,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "format" : "uuid"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "operation result",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/operationStatus"
                }
              }
            }
          }
        }
      },
      "post" : {
        "summary" : "creates a new operation",
        "operationId" : "createOperation",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/operation"
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "operation result"
          }
        }
      },
      "patch" : {
        "summary" : "update the status of a operation",
        "operationId" : "updateOperation",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/operation"
              }
            }
          }
        },
        "responses" : {
          "200" : {
            "description" : "operation result"
          }
        }
      }
    },
    "/notifications" : {
      "get" : {
        "summary" : "get number of active notifications",
        "operationId" : "notifications",
        "responses" : {
          "200" : {
            "description" : "operation result",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/operationStatus"
                }
              }
            }
          }
        }
      }
    },
    "/history" : {
      "get" : {
        "summary" : "get last 50 operations",
        "operationId" : "operationHistory",
        "responses" : {
          "200" : {
            "description" : "operation result",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/notificationResult"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "notificationResult" : {
        "required" : [ "total" ],
        "type" : "object",
        "properties" : {
          "total" : {
            "type" : "integer",
            "nullable" : false
          }
        }
      },
      "operation" : {
        "required" : [ "id" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid",
            "nullable" : false
          },
          "description" : {
            "type" : "string",
            "nullable" : true
          },
          "message" : {
            "type" : "string",
            "nullable" : true
          },
          "resultingId" : {
            "type" : "integer",
            "format" : "int32",
            "nullable" : true
          },
          "status" : {
            "type" : "string",
            "nullable" : false,
            "enum" : [ "Started", "Working", "FinishedSuccess", "FinishedError" ]
          }
        }
      },
      "operationStatus" : {
        "allOf" : [ {
          "$ref" : "#/components/schemas/operation"
        }, {
          "type" : "object",
          "properties" : {
            "finishedNotification" : {
              "type" : "boolean",
              "description" : "set to true when finshed until clear or 24h",
              "nullable" : false
            },
            "started" : {
              "type" : "string",
              "format" : "date-time",
              "nullable" : false
            },
            "finished" : {
              "type" : "string",
              "format" : "date-time",
              "nullable" : true
            }
          }
        } ]
      }
    },
    "securitySchemes" : {
      "bearerAuth" : {
        "type" : "http",
        "scheme" : "bearer"
      }
    }
  },
  "x-azure-api-id" : "whitefox-async-operations-api"
}